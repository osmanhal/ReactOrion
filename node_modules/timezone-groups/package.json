{
  "name": "timezone-groups",
  "version": "0.9.1",
  "description": "A JavaScript library to group time zones based on dates (DST-aware).",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "lint": "xo --fix --prettier --space",
    "prepare": "husky install",
    "release": "release-it"
  },
  "exports": {
    "./groupByName": {
      "import": "./dist/groupByName/index.mjs",
      "types": "./dist/groupByName/index.d.mts"
    },
    "./groupByOffset": {
      "import": "./dist/groupByOffset/index.mjs",
      "types": "./dist/groupByOffset/index.d.mts"
    },
    "./groupByRegion": {
      "import": "./dist/groupByRegion/index.mjs",
      "types": "./dist/groupByRegion/index.d.mts"
    },
    "./utils/continent": {
      "import": "./dist/utils/continent.mjs",
      "types": "./dist/utils/continent.d.mts"
    },
    "./utils/country": {
      "import": "./dist/utils/country.mjs",
      "types": "./dist/utils/country.d.mts"
    },
    "./utils/time-zones": {
      "import": "./dist/utils/time-zones.mjs",
      "types": "./dist/utils/time-zones.d.mts"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "author": "JC Franco <jfranco@esri.com>",
  "contributors": [
    "Sebastian Germesin <sebastian.germesin@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcfranco/timezone-groups.git"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "8.0.1",
    "@rollup/plugin-commonjs": "26.0.1",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@types/luxon": "3.4.2",
    "@types/node": "20.14.12",
    "date-fns": "3.6.0",
    "date-fns-tz": "3.1.3",
    "dayjs": "1.11.12",
    "husky": "9.1.1",
    "lint-staged": "15.2.7",
    "luxon": "3.4.4",
    "markdownlint-cli": "0.41.0",
    "moment-timezone": "0.5.45",
    "prettier": "3.3.3",
    "release-it": "17.6.0",
    "rimraf": "6.0.1",
    "rollup": "4.19.0",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-hashbang": "3.0.0",
    "typescript": "5.5.4",
    "xo": "0.59.2"
  },
  "engines": {
    "node": ">=18.12.0"
  }
}

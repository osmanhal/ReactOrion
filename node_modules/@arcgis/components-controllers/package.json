{
  "name": "@arcgis/components-controllers",
  "version": "4.30.7",
  "description": "Controllers are a code-reuse pattern for Stencil and Lit Web Components. They also improve Developer Experience of writing Web Components",
  "homepage": "https://developers.arcgis.com/javascript/latest/",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/accessor": {
      "types": "./dist/accessor/index.d.ts",
      "import": "./dist/accessor/index.js",
      "require": "./dist/accessor/index.cjs"
    },
    "./accessor": {
      "types": "./dist/accessor/index.d.ts",
      "import": "./dist/accessor/index.js",
      "require": "./dist/accessor/index.cjs"
    },
    "./jest-preset": "./jest-preset.cjs",
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./dist/plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/jestPreprocessor": {
      "types": "./dist/plugins/jestPreprocessor.d.ts",
      "import": "./dist/plugins/jestPreprocessor.js",
      "require": "./dist/plugins/jestPreprocessor.cjs"
    },
    "./dist/testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    },
    "./*": "./dist/*"
  },
  "files": [
    "dist/",
    "docs/",
    "jest-preset.cjs"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "build": "tsup --silent",
    "build:dev": "tsup --silent --sourcemap",
    "watch": "yarn build:dev --watch --onSuccess 'yarn'",
    "test": "yarn node --experimental-vm-modules $(yarn bin stencil) test --spec --",
    "test:ci": "yarn node --experimental-vm-modules $(yarn bin stencil) test --spec --coverage --ci --passWithNoTests --findRelatedTests --",
    "test:debug": "yarn node --experimental-vm-modules --inspect $(yarn bin stencil) test --spec --no-cache --runInBand --",
    "test:watch": "stencil test --spec --watchAll",
    "clean": "rimraf ./dist ./build ./turbo ./node_modules"
  },
  "dependencies": {
    "@arcgis/components-utils": "4.30.7",
    "estraverse": "^5.3.0",
    "magic-string": "^0.30.0"
  },
  "devDependencies": {
    "@arcgis/core": "~4.30.9",
    "@arcgis/core-adapter": "4.30.7",
    "@arcgis/typescript-config": "4.30.7",
    "@jest/transform": "^29.7.0",
    "@stencil/core": "4.17.1",
    "@types/estraverse": "^5.1.7",
    "@types/jest": "^29.5.0",
    "eslint": "^8.55.0",
    "lit": "^3.1.2",
    "rimraf": "^5.0.0",
    "rollup": "^3.25.0",
    "tsup": "^8.0.1",
    "typescript": "~5.3.0"
  },
  "peerDependencies": {
    "@arcgis/core": "~4.30.9",
    "@arcgis/core-adapter": "4.30.7"
  },
  "peerDependenciesMeta": {
    "@arcgis/core": {
      "optional": true
    },
    "@arcgis/core-adapter": {
      "optional": true
    }
  },
  "gitHead": "3b28bd938a75fe108ffc7f2ba465505695d79c14"
}

{
  "name": "@arcgis/components-utils",
  "version": "4.30.7",
  "description": "Collection of common internal patterns and utilities for ArcGIS Maps SDK for JavaScript components.",
  "homepage": "https://developers.arcgis.com/javascript/latest/",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "build": "tsup --silent",
    "build:dev": "tsup --silent --sourcemap",
    "build:watch": "yarn build:dev --watch --onSuccess 'yarn'",
    "clean": "rimraf ./dist ./build ./turbo ./node_modules",
    "test": "jest",
    "test:ci": "jest --ci --coverage --passWithNoTests --findRelatedTests",
    "test:debug": "yarn node --inspect $(yarn bin jest) --no-cache --runInBand"
  },
  "devDependencies": {
    "@arcgis/typescript-config": "4.30.7",
    "@stencil/core": "4.17.1",
    "@swc/core": "^1.3.107",
    "@swc/jest": "^0.2.31",
    "eslint": "^8.55.0",
    "jest": "^29.5.0",
    "resolve-pkg": "^2.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.1",
    "typescript": "~5.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ]
  },
  "gitHead": "3b28bd938a75fe108ffc7f2ba465505695d79c14"
}
